<Window x:Class="ServerPinger.AddPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ServerPinger"
        mc:Ignorable="d"
        Title="AddPopup" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="10">
        <Label Content="Name:" />
        <TextBox x:Name="NameTextBox" />
        <Label Content="IP Address:" />
        <TextBox x:Name="IpAddressTextBox" />
        <Label Content="Description:" />
        <TextBox x:Name="DescriptionTextBox" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="OkButton" Content="OK" IsDefault="True" Margin="5" Width="80" Click="OkButton_OnClick"/>
            <Button x:Name="CancelButton" Content="Cancel" IsCancel="True" Margin="5" Width="80" Click="CancelButton_OnClick"/>
        </StackPanel>
    </StackPanel>
</Window>